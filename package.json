{
  "name": "smart-mirror",
  "atomify": {
    "css": {
      "entry": "src/css/style.css",
      "output": "www/style.css",
      "assets": {
        "dest": "www/assets",
        "prefix": "assets/"
      }
    }
  },
  "browserify": {
    "transform": [
      "babelify",
      [
        "localenvify",
        {
          "envfile": ".env.local"
        }
      ]
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf www",
    "copy-html": "cpx src/index.html www",
    "prebuild": "npm run clean && npm run copy-html",
    "build-css": "atomify",
    "build-js": "NODE_ENV=production browserify src/js/main.js | uglifyjs -cm > www/bundle.js",
    "build": "npm run build-css && npm run build-js",
    "preserve": "mkdirp www",
    "serve": "live-server www",
    "start": "parallelshell \"npm run watch\" \"npm run serve\"",
    "prewatch": "npm run copy-html",
    "watch-css": "npm run build-css && onchange 'src/css/**/*.css' -- npm run build-css",
    "watch-js": "watchify src/js/main.js -o www/bundle.js -dv",
    "watch": "parallelshell \"npm run watch-css\" \"npm run watch-js\""
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "fetch-jsonp": "^1.0.0",
    "later": "^1.2.0",
    "moment": "^2.11.1",
    "openweathermap": "^1.0.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "weather-icons": "^1.3.2"
  },
  "devDependencies": {
    "atomify": "^7.3.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^14.4.0",
    "cpx": "^1.2.1",
    "ecstatic": "^2.1.0",
    "eslint": "^3.19.0",
    "eslint-config-kellyirc": "^3.1.0",
    "eslint-plugin-react": "^7.0.1",
    "live-server": "^1.2.0",
    "localenvify": "^1.0.1",
    "mkdirp": "^0.5.1",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.1",
    "uglify-js": "^3.0.15",
    "watchify": "^3.6.1"
  }
}
