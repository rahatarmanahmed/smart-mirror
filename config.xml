<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.rahatarmanahmed.smartmirror" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Smart Mirror</name>
    <description>
        A Smart Mirror.
    </description>
    <author email="rahatarmanahmed@gmail.com" href="http://rahatah.me/d">
        Rahat Ahmed
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="fullscreen" value="true" />
    <plugin name="nl.x-services.plugins.insomnia" spec="~4.0.1" />
    <plugin name="cordova-plugin-fullscreen" spec="~1.0.8" />
    <engine name="android" spec="~5.1.0" />
</widget>
