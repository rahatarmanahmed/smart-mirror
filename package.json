{
  "name": "smart-mirror",
  "browserify": {
    "transform": [
      "babelify",
      [
        "localenvify",
        {
          "envfile": ".env.local"
        }
      ]
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "build": "NODE_ENV=production browserify src/main.js | uglifyjs -cm > public/bundle.js",
    "start": "ecstatic -p 8000 public",
    "watch": "watchify src/main.js -o public/bundle.js -dv"
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "fetch-jsonp": "^1.0.0",
    "later": "^1.2.0",
    "moment": "^2.11.1",
    "openweathermap": "^1.0.0",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "weather-icons": "^1.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta8",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "ecstatic": "^1.3.1",
    "eslint": "^1.10.3",
    "eslint-config-kellyirc": "^3.1.0",
    "eslint-plugin-react": "^3.16.1",
    "localenvify": "^1.0.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  }
}
